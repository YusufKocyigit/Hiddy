{
    "manifest_version": 2,
    "name": "Reddit Post Hider",
    "version": "0.2",
    "description": "Hide Reddit posts based on keywords",
    "permissions": [
      "activeTab",
      "storage",
      "*://*.reddit.com/*"
    ],
    "icons": {
      "48": "images/icon.png" // Specify the path to the icon inside the images folder
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon.png", // Also specify the path here
        "48": "images/icon.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["*://*.reddit.com/*"],
        "js": ["content.js"],
        "run_at": "document_end"
      }
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    }
  }
  