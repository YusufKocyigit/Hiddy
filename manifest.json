{
    "manifest_version": 3,
    "name": "Reddit Post Hider",
    "version": "1.0",
    "description": "Hide Reddit posts based on keywords",
    "permissions": ["activeTab", "storage"],
    "icons": {
      "48": "images/icon.png"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["*://*.reddit.com/*"],
        "js": ["content.js"],
        "run_at": "document_end"
      }
    ]
  }
  